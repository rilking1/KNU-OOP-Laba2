<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Class="Laba2.MainPage"
             BackgroundColor="#e6e6e6">
    <ContentPage.Resources>
        <ResourceDictionary>
            <!--не працює якщо не змінить якесь значення-->
            <Style TargetType="Button">
                <Setter Property="CornerRadius" Value="40"/>
                <Setter Property="BackgroundColor" Value="#b3b3b3"/>
                <Setter Property="WidthRequest" Value="120"/>
                <Setter Property="HeightRequest" Value="120"/>
            </Style>

        </ResourceDictionary>
        <StyleSheet Source="Resources/Styles/stylesCSS.css" />
    </ContentPage.Resources>











    <ScrollView>

        <StackLayout x:Name="stackLayout">









            <Grid RowSpacing="10" ColumnSpacing="10">
                
                <Grid.RowDefinitions>
                    <RowDefinition Height="220" />
                    <RowDefinition Height="120" />
                    <RowDefinition Height="90" />
                    <RowDefinition Height="120" />
                    <RowDefinition Height="120" />

                </Grid.RowDefinitions>
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                
                <BoxView Color="Green" />
                <Button Text="create xml" Clicked="CreateXML_Clicked" BackgroundColor="#b3b3b3" WidthRequest="230" HeightRequest="150" LineBreakMode="CharacterWrap" CornerRadius="40"
                HorizontalOptions="Center"
               VerticalOptions="Center" />
                
                <BoxView Grid.Column="1"
                 Color="Blue" />
                <Button Text="Search" Clicked="SearchButton_Clicked" Grid.Column="1" BackgroundColor="#b3b3b3" WidthRequest="220" HeightRequest="120" CornerRadius="40"
               HorizontalOptions="Center"
               VerticalOptions="Start" />

                <Border Grid.Column="1" StrokeThickness="0" VerticalOptions="End">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="20" />
                    </Border.StrokeShape>
                    <Entry Grid.Column="1" 
           BackgroundColor="White"
           VerticalOptions="End"/>
                </Border>
                <BoxView Grid.Row="1"
                 Color="Teal" />
                <Button Text="download XML" FontSize="12" Clicked="LoadDataButton_Clicked" Grid.Row="1" BackgroundColor="#b3b3b3" WidthRequest="220" HeightRequest="120" LineBreakMode="WordWrap" CornerRadius="40"
               HorizontalOptions="Center"
               VerticalOptions="Center" />

                <BoxView Grid.Row="1"
                 Grid.Column="1"
                 Color="Purple" />
                <Border StrokeThickness="0" VerticalOptions="Start" Grid.Row="1" Grid.Column="1"  Grid.RowSpan="6">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="50" />
                    </Border.StrokeShape>
                    <ScrollView Grid.Row="1" Grid.Column="1"  Grid.RowSpan="6"> 

                        <Label x:Name="label1" BackgroundColor="White" WidthRequest="10000" 
                        Padding="20,0,0,0"
                       FontSize="18"
                       HorizontalOptions="Center"
                       VerticalOptions="Start"
                       LineBreakMode="WordWrap" />

                </ScrollView>
                </Border>
                <!--<RadioButton GroupName="Options" Content="Option 1" />
                <RadioButton GroupName="Options" Content="Option 2" />
                <RadioButton GroupName="Options" Content="Option 3" />-->


                <BoxView Grid.Row="2"
                 Grid.Column="0"            
                 Color="Chocolate" />

    


                <RadioButton GroupName="Options" Content="SAX API"
                 Grid.Row="2"
                 Grid.Column="0"    
               HorizontalOptions="Start"
               VerticalOptions="Start" />
                <RadioButton GroupName="Options" Content="DOM API" 
                 Grid.Row="2"
                 Grid.Column="0"                
                 HorizontalOptions="Start"
                 VerticalOptions="Center" />
                <RadioButton GroupName="Options" Content="LINQ to XML" 
                 Grid.Row="2"
                 Grid.Column="0"                
                 HorizontalOptions="Start"
                 VerticalOptions="End" />
                <BoxView Grid.Row="3"

                 Color="DarkCyan" />
                <Button Text="Go" Clicked="GO" Grid.Row="3" BackgroundColor="#b3b3b3" WidthRequest="220" HeightRequest="120" CornerRadius="40"
               HorizontalOptions="Center"
               VerticalOptions="Center" />

                <BoxView Grid.Row="4"
    
                 Color="DarkSeaGreen" />
                <Button Text="Exit" Clicked="ConfirmExitButton_Clicked" Grid.Row="4" BackgroundColor="#b3b3b3" WidthRequest="220" HeightRequest="120" CornerRadius="40"
               HorizontalOptions="Center"
               VerticalOptions="Center" />
            </Grid>



            <Button Text="Click to Rotate Text!"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                Clicked="ClearButton_Clicked" />



        </StackLayout>
        </ScrollView>

</ContentPage>